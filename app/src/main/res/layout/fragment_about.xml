<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <TextView
                android:id="@+id/tv_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text = "hasdhaf hau hfs ughba osfaufih aoufdhaofuha bs faug fabdau dfb"/>
            <TextView
                android:id="@+id/tv_pokedex_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokedex Data"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_bio"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_label_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Height"
                app:layout_constraintTop_toBottomOf="@id/tv_pokedex_data"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                app:layout_constraintTop_toTopOf="@id/tv_label_height"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="32kg"/>
            <TextView
                android:id="@+id/tv_label_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Width"
                app:layout_constraintTop_toBottomOf="@id/tv_label_height"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                app:layout_constraintTop_toTopOf="@id/tv_label_width"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="0.7m"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>