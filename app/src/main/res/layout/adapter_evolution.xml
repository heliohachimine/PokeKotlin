<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_pokemon_evolve_from"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_pokemon_evolve_from_number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/iv_pokemon_evolve_from"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="#1"/>

    <TextView
        android:id="@+id/tv_pokemon_evolve_from_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_pokemon_evolve_from_number"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Bulbasaur"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintStart_toEndOf="@id/iv_pokemon_evolve_from"
        app:layout_constraintTop_toTopOf="@id/iv_pokemon_evolve_from"
        app:layout_constraintEnd_toStartOf="@id/iv_pokemon_evolve_to"
        app:layout_constraintBottom_toBottomOf="@id/tv_pokemon_evolve_from_name"/>
    <TextView
        android:id="@+id/tv_min_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_arrow"
        app:layout_constraintStart_toStartOf="@id/iv_arrow"
        app:layout_constraintEnd_toEndOf="@id/iv_arrow"
        tools:text="(Level 32)"/>

    <ImageView
        android:id="@+id/iv_pokemon_evolve_to"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_pokemon_evolve_to_number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/iv_pokemon_evolve_to"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="#2"/>

    <TextView
        android:id="@+id/tv_pokemon_evolve_to_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_pokemon_evolve_to_number"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Ivysaur"/>

</androidx.constraintlayout.widget.ConstraintLayout>